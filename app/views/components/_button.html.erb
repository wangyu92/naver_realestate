<%
  # Button component for realestate app
  # Parameters:
  # - text: button text
  # - variant: primary, secondary, outline, danger, success
  # - size: sm, base, lg
  # - type: button, submit, reset
  # - class: additional CSS classes
  # - data: data attributes hash
  # - href: if present, renders as link instead of button
  # - disabled: boolean

  text ||= 'Button'
  variant ||= 'primary'
  size ||= 'base'
  type ||= 'button'
  disabled ||= false
  
  base_classes = "inline-flex items-center justify-center font-medium rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2"
  
  # Size classes
  size_classes = case size
  when 'sm'
    "px-3 py-1.5 text-sm"
  when 'lg'
    "px-6 py-3 text-lg"
  else # base
    "px-4 py-2 text-base"
  end
  
  # Variant classes
  variant_classes = case variant
  when 'primary'
    "bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500 #{'opacity-50 cursor-not-allowed' if disabled}"
  when 'secondary'
    "bg-gray-100 text-gray-700 hover:bg-gray-200 focus:ring-gray-500 #{'opacity-50 cursor-not-allowed' if disabled}"
  when 'outline'
    "border border-gray-300 bg-white text-gray-700 hover:bg-gray-50 focus:ring-blue-500 #{'opacity-50 cursor-not-allowed' if disabled}"
  when 'danger'
    "bg-red-600 text-white hover:bg-red-700 focus:ring-red-500 #{'opacity-50 cursor-not-allowed' if disabled}"
  when 'success'
    "bg-green-600 text-white hover:bg-green-700 focus:ring-green-500 #{'opacity-50 cursor-not-allowed' if disabled}"
  else
    "bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500 #{'opacity-50 cursor-not-allowed' if disabled}"
  end
  
  all_classes = [base_classes, size_classes, variant_classes, local_assigns[:class]].compact.join(' ')
%>

<% if local_assigns[:href] %>
  <%= link_to local_assigns[:href], 
      class: all_classes,
      data: local_assigns[:data] || {} do %>
    <%= text %>
  <% end %>
<% else %>
  <button 
    type="<%= type %>" 
    class="<%= all_classes %>"
    <%= 'disabled' if disabled %>
    <% if local_assigns[:data] %>
      <% local_assigns[:data].each do |key, value| %>
        data-<%= key %>="<%= value %>"
      <% end %>
    <% end %>
  >
    <%= text %>
  </button>
<% end %>