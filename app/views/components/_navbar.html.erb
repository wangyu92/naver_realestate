<%
  # Navigation header component
  # Parameters:
  # - logo_text: brand/logo text
  # - navigation_items: array of nav items [{text: "", href: ""}, ...]
  # - user_name: logged in user name (optional)
  # - class: additional CSS classes
  
  logo_text ||= "부동산 매물"
  navigation_items ||= []
  user_name ||= nil
  
  nav_items_default = [
    { text: "홈", href: "/" },
    { text: "매물검색", href: "/properties" },
    { text: "시세정보", href: "/market" },
    { text: "커뮤니티", href: "/community" }
  ]
  
  navigation_items = nav_items_default if navigation_items.empty?
%>

<nav class="bg-white shadow-sm border-b border-gray-200 <%= local_assigns[:class] %>">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m0 0h4"></path>
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900"><%= logo_text %></span>
        </a>
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <% navigation_items.each do |item| %>
            <a href="<%= item[:href] %>" 
               class="text-gray-600 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">
              <%= item[:text] %>
            </a>
          <% end %>
        </div>
      </div>
      
      <!-- User Menu / Login -->
      <div class="flex items-center space-x-4">
        <% if user_name %>
          <div class="relative" data-controller="dropdown">
            <button type="button" 
                    class="flex items-center text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500"
                    data-action="click->dropdown#toggle">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-blue-600">
                  <%= user_name[0].upcase %>
                </span>
              </div>
              <svg class="ml-2 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <!-- Dropdown Menu -->
            <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-10"
                 data-dropdown-target="menu">
              <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">내 정보</a>
              <a href="/favorites" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">관심 매물</a>
              <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">로그아웃</a>
            </div>
          </div>
        <% else %>
          <%= render 'components/button', 
              text: '로그인',
              variant: 'outline',
              size: 'sm',
              href: '/login' %>
          <%= render 'components/button', 
              text: '회원가입',
              variant: 'primary',
              size: 'sm',
              href: '/signup' %>
        <% end %>
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button type="button" 
                  class="text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
                  data-controller="mobile-menu"
                  data-action="click->mobile-menu#toggle">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="md:hidden hidden" data-mobile-menu-target="menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <% navigation_items.each do |item| %>
          <a href="<%= item[:href] %>" 
             class="text-gray-600 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium">
            <%= item[:text] %>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</nav>