<%
  # Image gallery component
  # Parameters:
  # - images: array of image URLs or objects with url and alt
  # - title: gallery title
  # - class: additional CSS classes
  
  images ||= []
  title ||= '이미지 갤러리'
  
  gallery_id = "gallery_#{SecureRandom.hex(4)}"
%>

<div class="<%= local_assigns[:class] %>" data-controller="gallery">
  <% if title %>
    <h3 class="text-lg font-semibold text-gray-900 mb-4"><%= title %></h3>
  <% end %>
  
  <% if images.any? %>
    <!-- Main Image -->
    <div class="relative mb-4">
      <div id="<%= gallery_id %>_main" class="relative h-96 bg-gray-200 rounded-lg overflow-hidden">
        <% main_image = images.first %>
        <% if main_image.is_a?(Hash) %>
          <img src="<%= main_image[:url] %>" 
               alt="<%= main_image[:alt] || 'Gallery image' %>"
               class="w-full h-full object-cover"
               data-gallery-target="mainImage">
        <% else %>
          <img src="<%= main_image %>" 
               alt="Gallery image"
               class="w-full h-full object-cover"
               data-gallery-target="mainImage">
        <% end %>
        
        <!-- Navigation Arrows -->
        <% if images.length > 1 %>
          <button type="button" 
                  class="absolute left-3 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white rounded-full p-2 hover:bg-opacity-75 transition-opacity"
                  data-action="click->gallery#previous"
                  data-gallery-target="prevButton">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          
          <button type="button" 
                  class="absolute right-3 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white rounded-full p-2 hover:bg-opacity-75 transition-opacity"
                  data-action="click->gallery#next"
                  data-gallery-target="nextButton">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        <% end %>
        
        <!-- Image Counter -->
        <% if images.length > 1 %>
          <div class="absolute bottom-3 right-3 bg-black bg-opacity-50 text-white px-3 py-1 rounded-full text-sm">
            <span data-gallery-target="counter">1</span> / <%= images.length %>
          </div>
        <% end %>
        
        <!-- Fullscreen Button -->
        <button type="button" 
                class="absolute top-3 right-3 bg-black bg-opacity-50 text-white rounded-full p-2 hover:bg-opacity-75 transition-opacity"
                data-action="click->gallery#openFullscreen">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Thumbnail Grid -->
    <% if images.length > 1 %>
      <div class="grid grid-cols-4 md:grid-cols-6 gap-2">
        <% images.each_with_index do |image, index| %>
          <div class="relative">
            <% if image.is_a?(Hash) %>
              <img src="<%= image[:url] %>" 
                   alt="<%= image[:alt] || 'Thumbnail' %>"
                   class="w-full h-20 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity <%= 'ring-2 ring-blue-500' if index == 0 %>"
                   data-action="click->gallery#selectImage"
                   data-gallery-index="<%= index %>"
                   data-gallery-target="thumbnail">
            <% else %>
              <img src="<%= image %>" 
                   alt="Thumbnail"
                   class="w-full h-20 object-cover rounded cursor-pointer hover:opacity-75 transition-opacity <%= 'ring-2 ring-blue-500' if index == 0 %>"
                   data-action="click->gallery#selectImage"
                   data-gallery-index="<%= index %>"
                   data-gallery-target="thumbnail">
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="h-96 bg-gray-100 rounded-lg flex items-center justify-center">
      <div class="text-center">
        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-gray-500">이미지가 없습니다</p>
      </div>
    </div>
  <% end %>
</div>