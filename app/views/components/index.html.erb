    <div class="space-y-8">
      
      <!-- Basic Buttons -->
      <div class="component-group">
        <h3 class="text-xl font-medium mb-4">Basic Buttons</h3>
        <div class="component-demo p-6 bg-gray-50 rounded-lg">
