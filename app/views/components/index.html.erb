  <!-- Forms Section -->
  <div id="forms" class="tab-pane mb-12">
    <h2 class="text-3xl font-semibold mb-6">Forms</h2>
    <div class="space-y-8">
      
      <!-- Basic Inputs -->
      <div class="component-group">
        <h3 class="text-xl font-medium mb-4">Input Fields</h3>
        <div class="component-demo p-6 bg-gray-50 rounded-lg">
          <form data-controller="form" class="space-y-4 max-w-md">
            <div class="form-group">
              <label class="form-label required">Property Name</label>
              <input type="text" class="form-input" placeholder="Enter property name" required>
              <div class="form-help">This will be displayed as the main title</div>
            </div>
            
            <div class="form-group">
              <label class="form-label">Description</label>
              <textarea class="form-input form-textarea" placeholder="Property description"></textarea>
            </div>
            
            <div class="form-group">
              <label class="form-label">Property Type</label>
              <select class="form-input form-select">
                <option>Select type</option>
                <option>House</option>
                <option>Apartment</option>
                <option>Condo</option>
                <option>Townhouse</option>
              </select>
            </div>
          </form>
        </div>
      </div>

      <!-- Property-specific Form -->
      <div class="component-group">
        <h3 class="text-xl font-medium mb-4">Real Estate Form</h3>
        <div class="component-demo p-6 bg-gray-50 rounded-lg">
          <form data-controller="form" class="space-y-6 max-w-2xl">
            <div class="form-row">
              <div class="form-group col-sm-6">
                <label class="form-label">Price</label>
                <div class="form-price">
                  <input type="text" class="form-input price-input" placeholder="0" data-form-target="priceInput">
                </div>
              </div>
              <div class="form-group col-sm-6">
                <label class="form-label">Square Footage</label>
                <input type="number" class="form-input" placeholder="1000">
              </div>
            </div>
            
            <div class="form-row">
              <div class="form-group col-sm-4">
                <label class="form-label">Bedrooms</label>
                <div class="form-bedrooms">
                  <input type="number" class="form-input" min="0" max="10" value="3">
                  <span class="text-sm text-gray-600">beds</span>
                </div>
              </div>
              <div class="form-group col-sm-4">
                <label class="form-label">Bathrooms</label>
                <div class="form-bathrooms">
                  <input type="number" class="form-input" min="0" max="10" step="0.5" value="2">
                  <span class="text-sm text-gray-600">baths</span>
                </div>
              </div>
              <div class="form-group col-sm-4">
                <label class="form-label">Garage</label>
                <input type="number" class="form-input" min="0" max="5" value="2">
              </div>
            </div>

            <!-- File Upload -->
            <div class="form-group">
              <label class="form-label">Property Images</label>
              <div class="form-file-drop" data-form-target="fileInput">
                <input type="file" multiple accept="image/*" data-max-size="5242880">
                <div class="text-center">
                  <p class="text-gray-600 mb-2">üì∏ Drop images here or click to browse</p>
                  <p class="text-sm text-gray-500">PNG, JPG up to 5MB each</p>
                </div>
              </div>
              <div class="mt-4" data-preview-for="property-images"></div>
            </div>

          </form>
        </div>
      </div>

      <!-- Form Controls -->
      <div class="component-group">
        <h3 class="text-xl font-medium mb-4">Form Controls</h3>
        <div class="component-demo p-6 bg-gray-50 rounded-lg">
          <div class="space-y-4 max-w-md">
            <!-- Checkboxes -->
            <div class="form-checkbox-group">
              <div class="form-checkbox">
                <input type="checkbox" id="amenity1">
                <label for="amenity1" class="form-checkbox-label">Swimming Pool</label>
              </div>
              <div class="form-checkbox">
                <input type="checkbox" id="amenity2" checked>
                <label for="amenity2" class="form-checkbox-label">Gym</label>
              </div>
              <div class="form-checkbox">
                <input type="checkbox" id="amenity3">
                <label for="amenity3" class="form-checkbox-label">Parking</label>
              </div>
            </div>

            <!-- Radio buttons -->
            <div class="form-radio-group">
              <div class="form-radio">
                <input type="radio" id="listing1" name="listing-type" value="sale">
                <label for="listing1" class="form-radio-label">For Sale</label>
              </div>
              <div class="form-radio">
                <input type="radio" id="listing2" name="listing-type" value="rent" checked>
                <label for="listing2" class="form-radio-label">For Rent</label>
              </div>
            </div>

            <!-- Switch -->
            <div class="form-switch">
              <input type="checkbox" id="featured">
              <label for="featured" class="form-switch-label">Featured Property</label>
            </div>
          </div>
        </div>
      </div>

    </div>
