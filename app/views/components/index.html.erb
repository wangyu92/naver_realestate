      <div class="component-group">
        <h3 class="text-xl font-medium mb-4">Interactive Buttons</h3>
        <div class="component-demo p-6 bg-gray-50 rounded-lg">
          <div class="flex flex-wrap gap-4">
            <button class="btn btn-primary" 
                    data-controller="button" 
                    data-action="click->button#ripple"
                    data-button-loading-text-value="Loading...">
              Ripple Effect
            </button>
            <button class="btn btn-secondary" 
                    data-controller="button" 
                    data-action="click->button#toggle"
                    data-button-confirm-message-value="Are you sure?"
                    class="btn-toggle">
              Toggle Button
            </button>
            <button class="btn btn-warning" 
                    data-controller="button" 
                    data-action="click->button#showLoading">
              Show Loading
            </button>
          </div>
        </div>
      </div>

